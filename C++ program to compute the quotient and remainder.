#include <iostream>

int main() {
    std::cout << "Compute quotient and remainder :\n";
    std::cout << "--------------------------------------\n";

    int dividend, divisor;
    std::cout << "Input the dividend : ";
    std::cin >> dividend;
    std::cout << "Input the divisor : ";
    std::cin >> divisor;

    int quotient = dividend / divisor;
    int remainder = dividend % divisor;

    std::cout << "The quotient of the division is : " << quotient << "\n";
    std::cout << "The remainder of the division is : " << remainder << "\n";

    return 0;
}
