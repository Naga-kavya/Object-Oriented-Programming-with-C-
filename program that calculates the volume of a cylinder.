#include <iostream>
#include <cmath>

int main() {
    std::cout << "Calculate the volume of a cylinder :\n";
    std::cout << "-----------------------------------------\n";

    double radius, height;
    std::cout << "Input the radius of the cylinder : ";
    std::cin >> radius;
    std::cout << "Input the height of the cylinder : ";
    std::cin >> height;

    double volume = M_PI * std::pow(radius, 2) * height;
    std::cout << "The volume of a cylinder is : " << volume << "\n";

    return 0;
}
