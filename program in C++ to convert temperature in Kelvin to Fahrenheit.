#include <iostream>

int main() {
    std::cout << "Convert temperature in Kelvin to Fahrenheit :\n";
    std::cout << "---------------------------------------------------\n";

    double kelvin;
    std::cout << "Input the temperature in Kelvin : ";
    std::cin >> kelvin;

    double fahrenheit = (kelvin - 273.15) * 9.0 / 5.0 + 32.0;

    std::cout << "The temperature in Kelvin : " << kelvin << "\n";
    std::cout << "The temperature in Fahrenheit : " << fahrenheit << "\n";

    return 0;
}
