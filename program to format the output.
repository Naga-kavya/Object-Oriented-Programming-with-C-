#include <iostream>
#include <iomanip>

int main() {
    std::cout << "Formatting the output :\n";
    std::cout << "----------------------------\n";

    double pi = 3.1416;
    std::cout << "The value of pi : " << pi << "\n";
    std::cout << "The value of pi 4 decimal place of total width 8 : |" << std::setw(8) << std::setprecision(4) << pi << "|\n";
    std::cout << "The value of pi 4 decimal place of total width 10 : |" << std::setw(10) << std::setprecision(4) << pi << "|\n";
    std::cout << "The value of pi 4 decimal place of total width 8 : |" << std::setw(8) << std::setprecision(4) << std::showpos << -pi << "|\n";
    std::cout << "The value of pi 4 decimal place of total width 10 : |" << std::setw(10) << std::setprecision(4) << std::noshowpos << -pi << "|\n";
    std::cout << "The value of pi in scientific format is : " << std::scientific << pi << "\n";
    std::cout << "Status in number : " << std::boolalpha << 0 << "\n";
    std::cout << "Status in alphabet : " << std::boolalpha << false << "\n";

    return 0;
}
